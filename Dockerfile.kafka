FROM confluentinc/cp-kafka:7.2.0

# Set Kafka environment variables
ENV KAFKA_ZOOKEEPER_CONNECT=zookeeper-cntr:2181
ENV ALLOW_PLAINTEXT_LISTENER=yes
ENV KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=CLIENT:PLAINTEXT,EXTERNAL:PLAINTEXT
ENV KAFKA_LISTENERS=CLIENT://:9092,EXTERNAL://:29092
ENV KAFKA_ADVERTISED_LISTENERS=CLIENT://kafka-cntr:9092,EXTERNAL://localhost:29092
ENV KAFKA_INTER_BROKER_LISTENER_NAME=CLIENT

# Expose ports
EXPOSE 9092 29092